from datetime import datetime

class ClassType:
    def __init__(self):
        self.economy_class = ""
        self.premium_economy_class = ""
        self.business_class = ""
        self.first_class = ""

    def choose_seat(self, class_name):
        print("Choose your seat preference for:")
        print("1. Window")
        print("2. Middle")
        print("3. End")
        seat_preference = int(input())
        return seat_preference

class Pricing:
    def __init__(self): # I want to try making a base price and multiplying that price to make the other class prices
        self.first_class = 1000
        self.business = 500
        self.premium_economy = 300
        self.economy = 100


    def original_price(self):

        if ClassType == "economy":
            return self.economy
        elif ClassType == "premium_economy":
            return self.premium_economy
        elif ClassType == "business":
            return self.business
        elif ClassType == "first_class":
            return self.first_class
        else:
            return None


class Discount:
    def __init__(self, base_price):
        self.base_price = base_price

    def holiday(self):
        current_date = datetime.now()
        if current_date.month == 12 and current_date.day == 25:
            return self.base_price * 0.85  # 15% discount
        return self.base_price

    def elderly(self, age):
        if age >= 70:
            return self.base_price * 0.95  # 5% discount
        return self.base_price


while 1:
    print("---------------Menu-----------------")
    print("1. Choose class.")
    print("2. Reservation of seats.")

    option = int(input())

    if option == 1:
        print("1. Economy Class.")
        print("2. Premium Economy Class.")
        print("3. Business Class.")
        print("4. First Class.")

        user = int(input("Input your choice: "))

        if user == 1:
            ClassType.economyC()
        elif user == 2:
            ClassType.premium_economyC()
        elif user == 3:
            ClassType.businessC()
        elif user == 4:
            ClassType.firstC()

    elif option == 2:
        ClassType.choose_seat()
