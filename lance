from datetime import datetime


class ClassType:
    def __init__(self):
        self.economy_class = ""
        self.premium_economy_class = ""
        self.business_class = ""
        self.first_class = ""

    def choose_seat(self, class_name):
        print("Choose your seat preference for:")
        print("1. Window")
        print("2. Middle")
        print("3. End")
        seat_preference = int(input())
        return seat_preference


class Pricing:
    def __init__(self):
        self.first_class = 1000
        self.business = 500
        self.premium_economy = 300
        self.economy = 100

    def original_price(self, class_name):
        if class_name == "economy":
            return self.economy
        elif class_name == "premium_economy":
            return self.premium_economy
        elif class_name == "business":
            return self.business
        elif class_name == "first_class":
            return self.first_class
        else:
            return None


class Discount:
    def __init__(self, base_price):
        self.base_price = base_price

    def holiday(self):
        current_date = datetime.now()
        if current_date.month == 12 and current_date.day == 25:
            return self.base_price * 0.85  # 15% discount
        return self.base_price

    def elderly(self, age):
        if age >= 70:
            return self.base_price * 0.95  # 5% discount
        return self.base_price


while True:
    print('---------------M---E---N---U-----------------')
    print('1. Choose class.')
    print('2. Reservation of seats.')

    option = int(input())

    if option == 1:
        print("1. Economy Class.")
        print("2. Premium Economy Class.")
        print("3. Business Class.")
        print("4. First Class.")

        user = int(input())

        class_management = ClassType()  # Assuming class_management is an instance of ClassType

        if user == 1:
            class_management.economy_class = "Economy"
        elif user == 2:
            class_management.premium_economy_class = "Premium Economy"
        elif user == 3:
            class_management.business_class = "Business"
        elif user == 4:
            class_management.first_class = "First Class"

    if option == 2:
        print("1. Choose seat.")
